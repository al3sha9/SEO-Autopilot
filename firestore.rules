rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to blogs collection
    match /blogs/{blogId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to social posts
    match /socialPosts/{postId} {
      allow read, write: if true;
    }
  }
}
